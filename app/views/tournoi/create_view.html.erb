<%= form_tag(tournoi_create_path, method: "post") do  %>

			<%= text_field_tag( :name, params[:name],required: true) %>

			<%= text_area_tag( :description, params[:description],size: "60x12",required: true) %>

			<%= text_area_tag( :cash_prize, params[:cash_prize],size: "60x12",required: true) %>

			<%= text_field_tag( :price, params[:price],required: true) %>

			<%= number_field_tag( :nb_player, params[:nb_player],required: true) %>

			<%= number_field_tag( :nb_phase, params[:nb_phase],required: true) %>

			<%= date_field_tag( :date, Date.today.to_s,required: true) %>

  	<%= submit_tag('create') %>
<% end %>