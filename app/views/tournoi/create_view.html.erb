<%= form_tag(tournoi_create_path, method: "post") do  %>

			<%= text_field :name, value: params[:name],required: true %><br />

			<%= text_area :description, value: params[:description],size: "60x12",required: true %><br />

			<%= text_area :cash_prize, value: params[:cash_prize],size: "60x12",required: true %><br />

			<%= text_field :price, value: params[:price],required: true %><br />

			<%= number_field :nb_player, value: params[:nb_player],required: true %><br />

			<%= number_field :nb_phase, value: params[:nb_phase],required: true %><br />

			<%= date_field :date, value: Date.today.to_s,required: true %>

  	<%= submit('create') %>
<% end %>