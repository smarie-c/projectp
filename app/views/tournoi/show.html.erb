<%= @tournoi.name %>
<%= @tournoi.description %>
<%= @tournoi.cash_prize %>
<%= @tournoi.price %>
<%= @tournoi.date %>

<% if @tournoi.id == current_user.id %>

	<%= form_tag(tournoi_delete_path, method: "put") do  %>
	<%= hidden_field_tag( :id, @tournoi.id,required: true) %>
	<%= text_area_tag( :description, @tournoi.description,size: "60x12",required: true) %>
	<%= text_area_tag( :cash_prize, @tournoi.cash_prize,size: "60x12",required: true) %>
	<%= text_field_tag( :price, @tournoi.price,required: true) %>
	<%= number_field_tag( :nb_player, @tournoi.nb_player,required: true) %>
	<%= number_field_tag( :nb_phase, @tournoi.nb_phase,required: true) %>
	<%= date_field_tag( :date, @tournoi.date,required: true) %>
	<%= submit_tag('update') %>
	<% end %>

	<%= form_tag(tournoi_delete_path, method: "delete") do  %>
	<%= hidden_field_tag( :id, @tournoi.id,required: true) %>
	<%= submit_tag('delete') %>
	<% end %>

<% end %>